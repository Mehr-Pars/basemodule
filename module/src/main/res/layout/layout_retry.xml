<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/empty_box_size"
        android:layout_height="@dimen/empty_box_size"
        app:srcCompat="@drawable/ic_error_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center_horizontal"
        android:text="@string/list_default_error_message"
        android:textColor="@color/colorGrayDarker"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/retryButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_35"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/btn_radius_red"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:minWidth="@dimen/button_width_120"
        android:text="@string/retry"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_10" />
</LinearLayout>